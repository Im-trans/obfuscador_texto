{
  "manifest_version": 3,
  "name": "Homoglyph Converter",
  "version": "1.1",
  "description": "Converta texto para hom√≥grafos para escapar de censura.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "32": "icon32.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "contextMenus",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
